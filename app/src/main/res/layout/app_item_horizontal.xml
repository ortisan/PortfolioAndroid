<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:gravity="left"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:background="#ffff6f16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/image_item"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/description_item"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Lorem xpto abc 123 lorem xpto abc 123 xpto abc 123 lorem xbc 123 lorem xpto abc 123"
            android:textSize="5dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/appRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/ic_archive_black_24dp" />

</RelativeLayout>